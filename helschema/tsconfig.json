{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es5"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "outDir": "build",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "paths": {
      "*": [
        "./types/*"
      ]
  },
  "include": [
    "src/**/*",
    "types"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
